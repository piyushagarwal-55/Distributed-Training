{
  "name": "hypergpu-smart-contracts",
  "version": "1.0.0",
  "description": "Gas-optimized smart contracts for distributed ML training on Monad",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:gas": "REPORT_GAS=true hardhat test",
    "test:coverage": "hardhat coverage",
    "deploy:local": "hardhat run scripts/deploy.js --network localhost",
    "deploy:testnet": "hardhat run scripts/deploy.js --network monad_testnet",
    "node": "hardhat node --port 8546",
    "verify": "hardhat verify"
  },
  "keywords": [
    "blockchain",
    "solidity",
    "smart-contracts",
    "monad",
    "ml",
    "distributed-training"
  ],
  "author": "HyperGPU Team",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.10",
    "@openzeppelin/contracts": "^5.4.0",
    "hardhat": "^2.19.5",
    "hardhat-gas-reporter": "^1.0.9",
    "solidity-coverage": "^0.8.5"
  },
  "dependencies": {
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/providers": "^5.7.2",
    "dotenv": "^16.3.1"
  }
}
