# =============================================================================
# HyperGPU Environment Configuration
# =============================================================================

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
DB_PASSWORD=your_secure_password_here
DATABASE_URL=postgresql://hypergpu:your_secure_password_here@localhost:5432/hypergpu

# -----------------------------------------------------------------------------
# Redis Configuration
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379/0

# -----------------------------------------------------------------------------
# Blockchain Configuration
# -----------------------------------------------------------------------------
BLOCKCHAIN_RPC=http://localhost:8546
MONAD_TESTNET_RPC=https://testnet-rpc.monad.xyz
PRIVATE_KEY=your_private_key_here
CHAIN_ID=10143

# Contract Addresses (update after deployment)
TRAINING_REGISTRY_ADDRESS=
CONTRIBUTION_TRACKER_ADDRESS=
REWARD_DISTRIBUTOR_ADDRESS=

# -----------------------------------------------------------------------------
# Backend Configuration
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
HOST=0.0.0.0
PORT=8000
WORKERS=4

# JWT Secret for authentication
JWT_SECRET=your_jwt_secret_here_min_32_chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# -----------------------------------------------------------------------------
# Frontend Configuration
# -----------------------------------------------------------------------------
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws
NODE_ENV=development

# -----------------------------------------------------------------------------
# Monitoring Configuration
# -----------------------------------------------------------------------------
GRAFANA_PASSWORD=admin
PROMETHEUS_RETENTION=15d

# -----------------------------------------------------------------------------
# Training Configuration
# -----------------------------------------------------------------------------
MODEL_CHECKPOINT_DIR=./checkpoints
MAX_NODES=100
DEFAULT_BATCH_SIZE=64
DEFAULT_LEARNING_RATE=0.001

# -----------------------------------------------------------------------------
# Security Configuration
# -----------------------------------------------------------------------------
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
RATE_LIMIT_PER_MINUTE=60
MAX_REQUEST_SIZE_MB=10

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
ENABLE_BLOCKCHAIN=true
ENABLE_NETWORK_SIMULATION=true
ENABLE_ADAPTIVE_TRAINING=true
ENABLE_METRICS_EXPORT=true
