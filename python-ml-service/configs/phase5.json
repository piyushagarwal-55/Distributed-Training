{
  "training": {
    "model_architecture": "simple_cnn",
    "dataset": "mnist",
    "learning_rate": 0.001,
    "batch_size": 64,
    "epochs": 3,
    "steps_per_epoch": 10,
    "optimizer": "adam",
    "num_nodes": 5,
    "aggregation_strategy": "simple_average",
    "synchronous": true,
    "timeout_seconds": 30.0,
    "device": "cpu",
    "save_checkpoints": true,
    "checkpoint_interval": 1,
    "checkpoint_dir": "./checkpoints"
  },
  "network": {
    "enable_simulation": true,
    "base_latency_ms": 50.0,
    "latency_variance_ms": 20.0,
    "packet_loss_rate": 0.01,
    "bandwidth_mbps": 100.0,
    "profiles": {
      "perfect": {"latency": 0, "packet_loss": 0},
      "good": {"latency": 20, "packet_loss": 0.001},
      "average": {"latency": 100, "packet_loss": 0.01},
      "poor": {"latency": 300, "packet_loss": 0.05}
    },
    "node_profiles": {}
  },
  "blockchain": {
    "enabled": true,
    "rpc_endpoint": "http://127.0.0.1:8545",
    "chain_id": 1337,
    "training_registry_address": null,
    "contribution_tracker_address": null,
    "reward_distributor_address": null,
    "abi_directory": "../smart-contracts/artifacts/contracts",
    "gas_limit": 500000,
    "gas_price_gwei": null,
    "max_retries": 3,
    "wait_for_confirmation": true,
    "confirmation_timeout": 120,
    "record_per_epoch": true,
    "batch_size": 10,
    "enable_async_transactions": false,
    "reward_strategy": 0,
    "total_reward_pool_eth": 0.1,
    "private_key": null
  },
  "log_level": "INFO",
  "log_file": "logs/phase5_training.log"
}
